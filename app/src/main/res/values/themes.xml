<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoachMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Removing Action Bar -->
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cm_purple</item>
        <item name="colorPrimaryVariant">@color/cm_purple2</item>
        <item name="colorOnPrimary">@color/cm_colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cm_colorOnPrimary</item>
        <item name="colorSecondaryVariant">@color/cm_colorOnPrimary</item>
        <item name="colorOnSecondary">@color/cm_colorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>
    <style name="CalendarDateGrayedOut">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>